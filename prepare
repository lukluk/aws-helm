#!/bin/bash
if [ "$BITBUCKET_DEPLOYMENT_ENVIRONMENT" = "staging" ]; then    
    export AWS_ACCOUNT=$AWS_ACCOUNT_STAGING
    export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID_STAGING
    export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY_STAGING
    echo $BITBUCKET_DEPLOYMENT_ENVIRONMENT
elif [ "$BITBUCKET_DEPLOYMENT_ENVIRONMENT" = "production" ]; then
    export AWS_ACCOUNT=$AWS_ACCOUNT_PRODUCTION
    export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID_PRODUCTION
    export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY_PRODUCTION
    echo $BITBUCKET_DEPLOYMENT_ENVIRONMENT
fi
